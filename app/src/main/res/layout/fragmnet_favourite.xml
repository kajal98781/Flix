<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    android:orientation="vertical">

    <!-- <android.support.v4.widget.SwipeRefreshLayout
         android:id="@+id/swipe_refresh_layout"
         android:layout_width="match_parent"
         android:layout_height="match_parent">-->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/reccycler_fav"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:padding="@dimen/spacing" />
    <!--
        </android.support.v4.widget.SwipeRefreshLayout>
    -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tv_no_fav_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_error_24dp"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/no_favourites"
            android:textAppearance="@style/TextAppearance.FontPath.REGULAR"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone" />

        <TextView
            android:id="@+id/tv_no_internet_available"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:drawableLeft="@drawable/ic_error_24dp"
            android:drawablePadding="@dimen/dp_10"
            android:gravity="center"
            android:text="@string/internet_connection"
            android:textAppearance="@style/TextAppearance.FontPath.REGULAR"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_medium"
            android:visibility="gone" />
    </FrameLayout>
</RelativeLayout>